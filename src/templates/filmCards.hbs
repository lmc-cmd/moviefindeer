 
 {{#each this}}
  <li class='film-card card-item'>
    <img
      {{#if this.poster_path}} 
      src='https://image.tmdb.org/t/p/w500/{{this.poster_path}}'
      {{else}} 
      src='https://png.pngtree.com/png-clipart/20211121/original/pngtree-not-found-stamp-label-png-image_6948403.png'
      {{/if}}
      alt='Poster of movie "{{this.original_title}}"'
      loading='lazy'
      class="film-image"
      id="{{this.id}}"
    />
    <div class='info'>
      <p class='film-tittle'>
        {{this.original_title}}
      </p>
      <p class='film-genre'>
        {{#each genre_ids}} {{this}}{{#unless @last}}, {{/unless}}{{/each}}
        &#8739;
        {{this.release_date}}
      </p>
    </div>
  </li>
{{/each}}

